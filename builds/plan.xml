<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<?xml-stylesheet type="text/xsl" href="http://www.eclipse.org/projects/project-plan.xsl"?>
<plan plan-format="1.0" xmlns="http://www.eclipse.org/project/plan" xmlns:html="http://www.w3.org/1999/xhtml" name="Mylyn Builds">
  <release projectid="mylyn.builds" version="1.0" />
  <introduction>
    <html:div xmlns="http://www.w3.org/1999/xhtml">
      <p>
        The first goal
        of
        <a href="http://www.eclipse.org/mylyn/builds">Mylyn Builds</a>
        is integration of continuous integration and build systems
        and seamless access to software build and
        assembly
        technologies. Mylyn users will be able to access continuous integration processes,
        control build
        execution and
        associate build results with tasks and context.
      </p>
    </html:div>
  </introduction>
  <release_deliverables>
    <html:div xmlns="http://www.w3.org/1999/xhtml">
      <ul>
        <li>
          <b>Framework</b>
        </li>
        <li>
          <b>Hudson/Jenkins Connector</b>
        </li>
        <li>
          <b>SDK</b>
        </li>
      </ul>
    </html:div>
  </release_deliverables>
  <release_milestones>
    <preamble>
      <html:div xmlns="http://www.w3.org/1999/xhtml">
        <p>
          Mylyn Builds 1.0 is part of the Mylyn 3.8 release. Please see the
          <a href="http://www.eclipse.org/projects/project-plan.php?projectid=mylyn#release_milestones">Mylyn plan</a>
          for release milestones.
        </p>
      </html:div>
    </preamble>
  </release_milestones>
  <target_environments>
    <html:div xmlns="http://www.w3.org/1999/xhtml">
      <p>
        Mylyn Builds follows the
        <a href="http://eclipse.org/projects/project-plan.php?projectid=mylyn#target_environments">target environment</a>
        guidelines of the Mylyn project.
      </p>
    </html:div>
    <internationalization>
      <html:div xmlns="http://www.w3.org/1999/xhtml">
        <p>
          Mylyn Builds follows the
          <a href="http://eclipse.org/projects/project-plan.php?projectid=mylyn#target_environment">internationalization</a>
          guidelines of the Mylyn project.
        </p>
      </html:div>
    </internationalization>
  </target_environments>
  <compatibility_with_previous_releases>
    <html:div xmlns="http://www.w3.org/1999/xhtml">
      <p>
        Mylyn Builds follows the
        <a href="http://eclipse.org/projects/project-plan.php?projectid=mylyn#target_environments">compatibility</a>
        guidelines of the Mylyn project.
      </p>
    </html:div>
  </compatibility_with_previous_releases>
  <themes_and_priorities>
    <preamble>
      <html:div xmlns="http://www.w3.org/1999/xhtml">
        <p>
          In addition to using the planned themes listed below, we need to
          continue prioritizing the ongoing input of
          our growing user
          community. Committers should prioritize bugs in the following
          order. This order needs not be
          used if a bug contains a community
          contribution of a patch, in which case the quality of the patch
          determines
          the priority.
        </p>
        <ul>
          <li>
            <a
              href="https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced&amp;product=Mylyn%20Builds&amp;target_milestone=1.0">Scheduled Tasks</a>
          </li>
          <li>
            <a
              href="https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced&amp;product=Mylyn%20Builds&amp;target_milestone=---&amp;keywords_type=allwords&amp;keywords=plan">Release Backlog</a>
          </li>
        </ul>
      </html:div>
    </preamble>
    <theme name="Framework and API">
      <description>
        <html:div xmlns="http://www.w3.org/1999/xhtml">
          <p>The framework component provides support for implementing connectors and generic user interface elements
            such as the Builds view.
          </p>
        </html:div>
      </description>
      <committed
        bugzilla="https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced&amp;product=Mylyn%20Builds&amp;component=Framework&amp;target_milestone=1.0&amp;keywords_type=allwords&amp;keywords=plan&amp;priority=P1" />
      <proposed
        bugzilla="https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced&amp;product=Mylyn%20Builds&amp;component=Framework&amp;target_milestone=1.0&amp;keywords_type=allwords&amp;keywords=plan&amp;priority=P2&amp;priority=P3&amp;priority=P4&amp;priority=P5" />
      <deferred
        bugzilla="https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced&amp;product=Mylyn%20Builds&amp;component=Framework&amp;target_milestone=1.1&amp;keywords_type=allwords&amp;keywords=plan" />
    </theme>
    <theme name="Connectors">
      <description>
        <html:div xmlns="http://www.w3.org/1999/xhtml">
          <p>
            The following repositories are supported:
          </p>
          <ul>
            <li>Hudson 2.1.2</li>
            <li>Jenkins 1.427</li>
          </ul>
        </html:div>
      </description>
      <committed
        bugzilla="https://bugs.eclipse.org/bugs/buglist.cgi?query_format=advanced&amp;product=Mylyn%20Builds&amp;component=Hudson%20Connector&amp;component=OSLC%20Connector&amp;target_milestone=1.0&amp;keywords_type=allwords&amp;keywords=plan&amp;priority=P1" />
      <proposed
